#include <GL/glut.h>


void floodFill(int x, int y, float* fill, float* old) 
{
    float pixel[3];
    glReadPixels(x, y, 1, 1, GL_RGB, GL_FLOAT, pixel);
    if (pixel[0] == old[0] && pixel[1] == old[1] && pixel[2] == old[2]) 
    {
        glColor3fv(fill);
        glBegin(GL_POINTS);
        glVertex2i(x, y); 
        glEnd();
        glFlush();
        floodFill(x + 1, y, fill, old);
        floodFill(x - 1, y, fill, old);
        floodFill(x, y + 1, fill, old);
        floodFill(x, y - 1, fill, old);
    }
}

void drawPolygon() 
{
    glClear(GL_COLOR_BUFFER_BIT);
    glLineWidth(2);
    glBegin(GL_LINES);
        glColor3f(1, 0, 0); glVertex2i(150, 100); glVertex2i(300, 300);
        glColor3f(0, 1, 0); glVertex2i(300, 300); glVertex2i(450, 100);
        glColor3f(0, 0, 1); glVertex2i(150, 100); glVertex2i(450, 100);
    glEnd();
    glFlush();
}

void mouse(int btn, int state, int x, int y) 
{
    if (btn == GLUT_LEFT_BUTTON && state == GLUT_DOWN) 
    {
        y = 480 - y;
        float fill[] = {0, 0, 1}, old[3];
        glReadPixels(x, y, 1, 1, GL_RGB, GL_FLOAT, old);
        floodFill(x, y, fill, old);
    }
}

int main(int argc, char** argv) 
{
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(640, 480);
    glutCreateWindow("Flood Fill");
    glClearColor(0, 0, 0, 1);
    gluOrtho2D(0, 640, 0, 480);
    glutDisplayFunc(drawPolygon);
    glutMouseFunc(mouse);
    glutMainLoop();
    return 0;
}
