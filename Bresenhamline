#include <GL/glut.h>
#include <iostream>
#include <cstdlib> 

int x_start, y_start, x_end, y_end;

void drawLineBresenham(int x1, int y1, int x2, int y2) 
{
    int dx = abs(x2 - x1);
    int dy = abs(y2 - y1);

    int x = x1;
    int y = y1;

    int x_step = (x2 > x1) ? 1 : -1;
    int y_step = (y2 > y1) ? 1 : -1;

    int is_steep = dy > dx;

    if (is_steep) 
    {
        std::swap(dx, dy);
    }

    int p = 2 * dy - dx;

    glBegin(GL_POINTS);
    for (int i = 0; i <= dx; i++) 
    {
        glVertex2i(x, y);
        if (p < 0) 
        {
            p += 2 * dy;
        } else 
        {
            if (is_steep)
                x += x_step;
            else
                y += y_step;
            p += 2 * (dy - dx);
        }

        if (is_steep)
            y += y_step;
        else
            x += x_step;
    }
    glEnd();
}

void display() 
{
    glClear(GL_COLOR_BUFFER_BIT);
    glColor3f(0.0, 0.0, 1.0); 
    drawLineBresenham(x_start, y_start, x_end, y_end);
    glFlush();
}

int main(int argc, char** argv) 
{
    std::cout << "Enter start point (x y): ";
    std::cin >> x_start >> y_start;

    std::cout << "Enter end point (x y): ";
    std::cin >> x_end >> y_end;

    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(500, 500);
    glutInitWindowPosition(100, 100);
    glutCreateWindow("Bresenham Line - C++");

    glClearColor(1.0, 1.0, 1.0, 1.0); // White background
    gluOrtho2D(0, 500, 0, 500);       // 2D orthographic projection

    glutDisplayFunc(display);
    glutMainLoop();
    return 0;
}
